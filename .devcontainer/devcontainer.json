{
    "name": "My Flask App",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "flask-app",
    "workspaceFolder": "/app",
    "overrideCommand": true,
    "updateRemoteUserUID": true,
    "localPortHost": "127.0.0.1",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python"]
        }
    },
    "portsAttributes": {
        "4000": {
            "label": "Flask App",
            "onAutoForward": "openBrowser",
            "elevateIfNeeded": true
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y openssh-client",
    "postStartCommand": "python app.py --host=0.0.0.0 --port=4000"
}