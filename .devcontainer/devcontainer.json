{
    "name": "My Pre-built Flask App",
    "image": "ghcr.io/piperoldan/myapp:latest",
    "runArgs": ["--add-host=host.docker.internal:host-gateway"],
    "forwardPorts": [4000, 8081, 3306], // Ensures Flask, Adminer, and MySQL are all forwarded
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.terminal.activateEnvInSelectedTerminal": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "cweijan.vscode-mysql-client2"
            ]
        }
    },
    "portsAttributes": {
        "4000": {
            "label": "Flask App",
            "onAutoForward": "openBrowser"
        }
    }
}