{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask App",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "console": "integratedTerminal",
      "subProcess": false,
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "0",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-reload",
        "--host", "0.0.0.0",
        "--port", "4000"
      ],
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/workspaces/myapp"
        }
      ],
      "jinja": true
    }
  ]
}
